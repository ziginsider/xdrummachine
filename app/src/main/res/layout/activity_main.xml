<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/mid_tom_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/mid_tom_2"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/mid_tom_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/mid_tom_3"
                app:layout_constraintStart_toEndOf="@id/mid_tom_1"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/mid_tom_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/mid_tom_4"
                app:layout_constraintStart_toEndOf="@id/mid_tom_2"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/mid_tom_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/mid_tom_5"
                app:layout_constraintStart_toEndOf="@id/mid_tom_3"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/mid_tom_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/mid_tom_6"
                app:layout_constraintStart_toEndOf="@id/mid_tom_4"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/mid_tom_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/mid_tom_7"
                app:layout_constraintStart_toEndOf="@id/mid_tom_5"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/mid_tom_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/mid_tom_8"
                app:layout_constraintStart_toEndOf="@id/mid_tom_6"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/mid_tom_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/mid_tom_7"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/snare_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/snare_2"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <CheckBox
                android:id="@+id/snare_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/snare_3"
                app:layout_constraintStart_toEndOf="@id/snare_1"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <CheckBox
                android:id="@+id/snare_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/snare_4"
                app:layout_constraintStart_toEndOf="@id/snare_2"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <CheckBox
                android:id="@+id/snare_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/snare_5"
                app:layout_constraintStart_toEndOf="@id/snare_3"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <CheckBox
                android:id="@+id/snare_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/snare_6"
                app:layout_constraintStart_toEndOf="@id/snare_4"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <CheckBox
                android:id="@+id/snare_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/snare_7"
                app:layout_constraintStart_toEndOf="@id/snare_5"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <CheckBox
                android:id="@+id/snare_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/snare_8"
                app:layout_constraintStart_toEndOf="@id/snare_6"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <CheckBox
                android:id="@+id/snare_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/snare_7"
                app:layout_constraintTop_toBottomOf="@id/mid_tom_1" />

            <TextView
                android:id="@+id/viz_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_1"
                app:layout_constraintStart_toStartOf="@id/snare_1"
                app:layout_constraintTop_toBottomOf="@id/snare_1"
                tools:text="+" />

            <TextView
                android:id="@+id/viz_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_2"
                app:layout_constraintStart_toStartOf="@id/snare_2"
                app:layout_constraintTop_toBottomOf="@id/snare_2"
                tools:text="+" />

            <TextView
                android:id="@+id/viz_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_3"
                app:layout_constraintStart_toStartOf="@id/snare_3"
                app:layout_constraintTop_toBottomOf="@id/snare_3"
                tools:text="+" />

            <TextView
                android:id="@+id/viz_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_4"
                app:layout_constraintStart_toStartOf="@id/snare_4"
                app:layout_constraintTop_toBottomOf="@id/snare_4"
                tools:text="+" />

            <TextView
                android:id="@+id/viz_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_5"
                app:layout_constraintStart_toStartOf="@id/snare_5"
                app:layout_constraintTop_toBottomOf="@id/snare_5"
                tools:text="+" />

            <TextView
                android:id="@+id/viz_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_6"
                app:layout_constraintStart_toStartOf="@id/snare_6"
                app:layout_constraintTop_toBottomOf="@id/snare_6"
                tools:text="+" />

            <TextView
                android:id="@+id/viz_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_7"
                app:layout_constraintStart_toStartOf="@id/snare_7"
                app:layout_constraintTop_toBottomOf="@id/snare_7"
                tools:text="+" />

            <TextView
                android:id="@+id/viz_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="@id/snare_8"
                app:layout_constraintStart_toStartOf="@id/snare_8"
                app:layout_constraintTop_toBottomOf="@id/snare_8"
                tools:text="+" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_play_arrow_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_stop_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/play_button"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/viz_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Visualization"
        app:layout_constraintTop_toBottomOf="@id/minus_bpm_button"
        app:layout_constraintBottom_toTopOf="@id/metronome_checkbox"
        app:layout_constraintStart_toStartOf="@id/minus_bpm_button" />

    <CheckBox
        android:id="@+id/metronome_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checked="true"
        android:text="Metronome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/minus_bpm_button" />

    <LinearLayout
        android:id="@+id/seek_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="480"
            android:min="1" />

        <TextView
            android:id="@+id/seek_bar_text_view"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="60" />

    </LinearLayout>

    <Button
        android:id="@+id/minus_bpm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:text="- minus bpm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_layout" />

    <Button
        android:id="@+id/plus_bpm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="plus bpm +"
        app:layout_constraintLeft_toRightOf="@id/minus_bpm_button"
        app:layout_constraintTop_toBottomOf="@id/seek_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>